---
const { label, href = "#", size = "medium" } = Astro.props;

const sizeClasses = {
  small: "px-6 py-2 text-base",
  medium: "px-8 py-3 text-lg",
  large: "px-12 py-4 text-xl",
};

// Botão principal com glow interno
const baseClasses = `
  relative z-10  bg-[#25D366] text-white font-bold 
  rounded-2xl shadow-lg
  hover:bg-[#25D366] hover:shadow-2xl
  transform transition-all duration-300 ease-out
  focus:outline-none focus:ring-4 focus:ring-green-400 active:scale-95
`;
---

<a href={href} class={`${baseClasses} ${sizeClasses[size]} text-black` }>
  {label}
  
  <!-- Glow interno -->
  <span class="absolute inset-0 rounded-2xl pointer-events-none" style="box-shadow: 0 0 20px rgba(34,197,94,0.7) inset;"></span>

  <!-- Anéis pulsantes extravagantes -->
  <span class="absolute inset-0 rounded-2xl border-2 border-green-400 opacity-80 animate-border-pulse pointer-events-none z-0"></span>
  <span class="absolute inset-0 rounded-2xl border-2 border-green-400 opacity-60 animate-border-pulse-slow pointer-events-none z-0"></span>
  <span class="absolute inset-0 rounded-2xl border-2 border-green-400 opacity-40 animate-border-pulse-slower pointer-events-none z-0"></span>
</a>

<style lang="postcss" is:global>
@keyframes border-pulse {
  0% { transform: scale(1); opacity: 0.8; }
  50% { transform: scale(1.4); opacity: 0; }
  100% { transform: scale(1); opacity: 0.8; }
}

@keyframes border-pulse-slow {
  0% { transform: scale(1); opacity: 0.6; }
  50% { transform: scale(1.5); opacity: 0; }
  100% { transform: scale(1); opacity: 0.6; }
}

@keyframes border-pulse-slower {
  0% { transform: scale(1); opacity: 0.4; }
  50% { transform: scale(1.6); opacity: 0; }
  100% { transform: scale(1); opacity: 0.4; }
}

.animate-border-pulse { animation: border-pulse 1.2s infinite; }
.animate-border-pulse-slow { animation: border-pulse-slow 1.8s infinite; }
.animate-border-pulse-slower { animation: border-pulse-slower 2.5s infinite; }
</style>
